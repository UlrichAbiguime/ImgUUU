<?xml version="1.0" encoding="utf-8"?>
<sz.ultima.imageu.viewz.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_height="match_parent">

    <!--<include layout="@layout/personal_menu" />-->

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <!--  <TextView
              android:id="@+id/tv_string_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="我周围"
              android:textSize="16sp"
              android:layout_marginBottom="5dp"
              android:textColor="@color/white"
              />
          <include layout="@layout/light_line" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_edit"
                android:src="@drawable/icon_edit_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <sz.ultima.imageu.viewz.CircularImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/circularone"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:border_color="#7a7979"
                app:border_width="4dp"
                android:padding="5dp"
                app:shadow="true"
                android:src="@drawable/profile_pic"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_setting_bg"
                android:id="@+id/iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</sz.ultima.imageu.viewz.OverScrollView>